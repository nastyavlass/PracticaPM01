<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/texTitleOnboard1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/onboard1_title"
        android:textColor="@color/purple"
        android:textStyle="bold"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/imageOnboard1"
        app:layout_constraintStart_toStartOf="@+id/imageOnboard1"
        app:layout_constraintTop_toBottomOf="@+id/imageOnboard1" />

    <ImageView
        android:id="@+id/imageOnboard1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_onboard_one" />

    <TextView
        android:id="@+id/textOnboard1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/purple"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        android:text="@string/onboard1_information"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/imageOnboard1"
        app:layout_constraintStart_toStartOf="@+id/imageOnboard1"
        app:layout_constraintTop_toBottomOf="@+id/texTitleOnboard1" />

    <TextView
        android:id="@+id/textSkipOnboard1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/skip"
        android:textColor="@color/purple"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/textOnboard1"
        app:layout_constraintStart_toStartOf="@+id/textOnboard1"
        app:layout_constraintTop_toBottomOf="@+id/textOnboard1" />
</androidx.constraintlayout.widget.ConstraintLayout>